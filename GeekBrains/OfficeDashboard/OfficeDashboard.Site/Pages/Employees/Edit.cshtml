@page
@model OfficeDashboard.Site.Pages.Employees.EditModel

<form method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="Employee.Id"/>
	<input type="hidden" asp-for="OriginalOfficeId"/>
	<div>
		<label asp-for="Employee.Name"></label>
		<input type="text" asp-for="Employee.Name"/>
		<span asp-validation-for="Employee.Name" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Employee.Surname"></label>
		<input type="text" asp-for="Employee.Surname"/>
		<span asp-validation-for="Employee.Surname" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Employee.OfficeId">Office</label>
		<select asp-for="Employee.OfficeId" asp-items="Model.OfficesSelectList">
			<option value="@Guid.Empty">None</option>
		</select>
		<span asp-validation-for="Employee.OfficeId" class="text-danger"></span>
	</div>
	<div>
		<button type="submit" asp-page-handler="GoBack">GoBack</button>
		<button type="submit">Save</button>
	</div>
</form>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
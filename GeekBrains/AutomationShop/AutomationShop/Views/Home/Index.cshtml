@model HomeViewModel
@{
	ViewData["Title"] = "Home Page";
}
<div class="top">
	<div class="container content_box">
		<div class="top_info">
			<h1 class="heading-top">New Automation Tool for Your</h1>
			<p class="text top_text">
				Lorem ipsum dolor sit amet, consectetur adipiscing elit. Faucibus tristique vulputate ultrices ut
				mauris tellus at.
				Posuere sollicitudin odio tellus elit.
			</p>
			<a href="#" class="top_button">See Our Project</a>
		</div>
	</div>
</div>

<div class="what-we-do container">
	<h3 class="heading">What we do to help our client grow in digital era</h3>

	<div class="card-box">
		@if (Model is not null)
		{
			foreach (var product in Model.Products)
			{
				<div class="card product-card">
					<img class="card_img" src="@product.Icon" alt="features 1">
					<h4 class="heading-mini">@product.Title</h4>
					<p class="text">@product.Description</p>
					<a class="card_link" href="#">Learn mode</a>
				</div>
			}
		}
	</div>
</div>

<div class="project container">
	<h3 class="heading">Our Finished Project</h3>
	<p class="text text_project">
		Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et
		dolore magna
		aliqua. Ut enim ad minim veniam.
	</p>

	<div class="project_item">
		<img class="project_img" src="@Model.IdolProduct.Icon" alt="smart home">
		<p class="project_text">@Model.IdolProduct.Title</p>
	</div>

	<div class="project_parent">
		@foreach (var finished in Model.FinishedProducts)
		{
			<div class="project_item">
				<img class="project_img" src="@finished.Icon" alt="mobile app">
				<p class="project_text project_text_mini">@finished.Title</p>
			</div>
		}
	</div>
</div>